{# templates/components/Select.html.twig #}
<div class="flex flex-col gap-2.5 {{ class }}">
	<label for="{{ id|default(name) }}">
		{{ label }}
	</label>
	<select name="{{ name }}" id="{{ id|default(name) }}" class="p-2.5 rounded-6 bg-white border border-gray-300 whitespace-nowrap overflow-hidden text-ellipsis w-full">
    {% block content %}{% endblock %}
	</select>
</div>
