{# templates/components/TextField.html.twig #}
<div class="flex flex-col gap-2.5 self-stretch">
    <label for="{{ name }}">{{ label }}</label>
    <input
        type="{{ type }}"
        value="{{ value }}"
        name="{{ name }}"
        id="{{ name }}"
        class="rounded-6 p-2.5 border border-gray-300"
        autocomplete="{{ autocomplete }}"
        {{ required ? 'required' : ''}}
        autofocus
    />
    {% if not required %}
      <small class="text-gray-500">Ce champ est optionnel</small>
    {% endif %}
</div>
