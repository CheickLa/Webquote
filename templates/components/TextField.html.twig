{# templates/components/TextField.html.twig #}
<div class="flex flex-col gap-2.5 self-stretch">
    <label for="{{ name }}" class="dark:text-white">{{ label }}</label>
    <input
        type="{{ type }}"
        value="{{ value }}"
        name="{{ name }}"
        id="{{ id|default(name) }}"
        class="rounded-6 p-2.5 border border-gray-300"
        autocomplete="{{ autocomplete }}"
        {{ required ? 'required' : '' }}
        {% if min|default(null) %}
          min="{{ min }}"
        {% endif %}
        autofocus
        {% if not required %}
          placeholder="Optionnel"
        {% endif %}
        step="{{ step }}"
    />
</div>
