{% extends 'base.html.twig' %}
{% block title %}Inscrivez vous !{% endblock %}

{% block body %}
<div class="min-h-screen bg-indigo-50 p-2 md:p-24 flex flex-col">
     <h1 class="text-2xl md:text-4xl lg:text-6xl text-center">Inscrivez-vous pour profiter de nos services 👨🏽‍💻</h1>
    <p class="mt-4 text-base md:text-2xl lg:text-3xl text-center">Et prenez de l'avance sur vos concurrents ! 🚀 </p>

    <div class="flex flex-col md:flex-row p-8">
        <img src="{{ asset('build/images/logo2.png') }}" class="object-cover mb-4 md:mb-0 md:flex-1" alt="logo">

        <div class="p-2 bg-white text-center w-full md:w-1/2">
            {{ form_start(form) }}
                {% for field in form %}
                    <div class="mt-4">
                        {{ form_label(field, null, {'label_attr': {'class': 'block text-gray-500 mb-2 text-xl lg:text-2xl'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'border shadow-inner w-full lg:w-1/2 sm:w-full py-2 px-3 text-gray-700 text-xl focus:shadow-outline'}}) }}
                    </div>
                {% endfor %}

                {{ form_rest(form) }}
                <button type="submit" class="text-white bg-blue-500 px-4 py-2 w-full mt-4 text-xl lg:text-3xl rounded-xl">S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
