<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %} | Webquote</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app_css') }}
            <link rel="stylesheet" href="{{ asset('build/node-snackbar/snackbar.min.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        <script src="{{ asset('build/node-snackbar/snackbar.min.js') }}"></script>
        <script>
          {% for label, messages in app.flashes %}
            {% for message in messages %}
          Snackbar.show({ 
            text: '{{ message }}', 
            pos: 'bottom-right',
            showAction: false,
          });
            {% endfor %}
          {% endfor %}
        </script>
    </body>
</html>
