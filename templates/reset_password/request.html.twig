{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="w-full min-h-screen flex flex-col p-2.5 lg:p-0 lg:justify-center items-center gap-10">
      <h1 class="text-4xl font-semibold text-webquote-500 font-webquote">Webquote</h1>
      {{ form_start(requestForm, {
        attr: {
          class: 'flex flex-col items-center gap-[30px] w-auto lg:w-[400px] self-stretch lg:self-auto',
        }
      }) }}
        <twig:TextField name="{{ field_name(requestForm.email) }}" value="{{ field_value(requestForm.email)|default('') }}" label="Adresse mail" />
        <div class="flex flex-col gap-10 self-stretch">
          <twig:Button id="submit-btn" class="bg-webquote-500 hover:bg-webquote-600 text-white flex-1 self-stretch justify-center">
            Réinitialiser mon mot de passe
			    </twig:Button>

          <a href="{{ path('app_login') }}" class="text-center text-webquote-500">
            Retour à la connexion
          </a>
        </div>
      {{ form_end(requestForm) }}
    </div>
{% endblock %}

