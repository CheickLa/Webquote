{% extends 'dashboard/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block content %}
<div class="self-stretch flex flex-col gap-5">
  <div class="flex gap-2.5 justify-between items-center self-stretch">
    <h1 class="font-title font-bold text-2xl dark:text-white">Clients</h1>
    <twig:ButtonLink href="{{ path('app_client_new') }}" id="add-btn" class="bg-webquote-500 hover:bg-webquote-600 text-white">
      <i class="ti ti-playlist-add"></i>
      Ajouter 
    </twig:ButtonLink>
  </div>

  {# Clients #}
  <div class="flex flex-col self-stretch pt-2.5 gap-2.5 overflow-scroll
    max-h-[calc(100svh-142px)] md:max-h-[calc(100svh-202px)]">
    {% for client in clients %}
    <div
      class="flex gap-10 rounded-6 border border-gray-300 p-2.5 items-center bg-white hover:bg-gray-300 cursor-pointer" onclick="goTo('{{ path('app_client_edit', {'id': client.id}) }}')">
      <div class="flex flex-col flex-1 md:flex-row md:items-center">
        <h3 class="text-md">{{ client.name }}</h3>
      </div>
    </div>
    {% else %}
    <p class="dark:text-white">Vous n'avez aucun client pour l'instant</p> 
    {% endfor %}
  </div>

  {% endblock %}
