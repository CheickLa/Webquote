{# Formulaire d'ajout et de modification #}
{% extends 'dashboard/base.html.twig' %}

{% block title %}Prestations
{% endblock %}

{% block breadcrumbs %}Prestations
{% endblock %}

{% block content %}
	<div class="flex flex-col md:justify-center items-center flex-1 self-stretch">
		{{ form_start(form, {
    attr: {
        class: 'flex flex-col justify-center items-start gap-[30px]',
    }
    }) }}
		<h1 class="text-2xl font-semibold">{{ title }}</h1>

		{{ form_errors(form.name) }}

		<twig:TextField name="{{ field_name(form.name) }}" value="{{ field_value(form.name)|default('') }}" label="Nom"/>

		<div class="flex items-center gap-2.5 self-stretch">
			<twig:ButtonLink href="{{ path('app_service_category_index') }}" id="back-btn" class="bg-gray-100 hover:bg-gray-200 flex-1 justify-center">
        <i class="ti ti-arrow-narrow-left"></i>
        Retour
      </twig:ButtonLink>
			<twig:Button id="submit-btn" class="bg-webquote-500 hover:bg-webquote-600 text-white flex-1 justify-center">
        <i class="ti {{ icon }}"></i>
        {{ buttonText }}
      </twig:Button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
