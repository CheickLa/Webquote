{% extends 'base.html.twig' %}
{% block title %}Inscrivez vous !{% endblock %}

{% block body %}
<div class="min-h-screen p-2 md:p-16">
    <h1 class="text-2xl md:text-4xl lg:text-5xl text-center">Inscrivez-vous pour profiter de nos services 👨🏽‍💻</h1>
    <p class="mt-4 text-base md:text-2xl lg:text-2xl text-center">Et prenez de l'avance sur vos concurrents ! 🚀 </p>

    <div class="flex items-start justify-center h-screen mt-4 lg:mt-20">
        <div class="flex flex-col md:flex-row">
            <div class="flex-1">
                <img src="{{ asset('build/images/logo1.png') }}" class="md:h-full" alt="logo">
            </div>
            <div class="p-8 bg-white text-center flex-1 justify-center flex items-center">
                {{ form_start(form) }}
                <div class="mt-4">
                    {{ form_label(form.siren, 'Siren', {'label_attr': {'class': 'registerLabel'}}) }}
                    {{ form_widget(form.siren, {'attr': {'class': 'registerInput'}}) }}
                </div>

                <div class="mt-4">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'registerLabel'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'registerInput'}}) }}
                </div>

                {{ form_rest(form) }}
                <button type="submit" class="btnsubmit">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
