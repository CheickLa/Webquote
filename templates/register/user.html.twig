{% extends 'base.html.twig' %}

{% block title %}
  Renseignez vos identifiants utilisateur
{% endblock %}

{% block body %}
  <div class="flex w-full min-h-screen">
    {# Left side #}
    <div class="hidden md:flex basis-1/2 self-stretch bg-wq-blue-500"></div>

    {# Right side #}
    <main class="flex flex-1 md:basis-1/2 p-5 md:py-2.5 md:px-[60px] flex-col md:justify-center gap-2.5 md:gap-[60px] self-stretch items-center">
      <h1 class="md:hidden text-wq-blue-500 font-bold text-2xl">Identifiants</h1>

      <div class="hidden md:flex flex-col gap-[5px] self-stretch">
        <h1 class="text-2xl font-semibold">Plus qu'une Ã©tape...</h1>
        <h2 class="text-2xl font-semibold text-wq-blue-500">Vos identifiants utilisateur</h2>
      </div>

      {# Form #}
      <form method="post" class="flex flex-col self-stretch py-5 gap-[30px]">
				<!--Inputs-->
				<div class="flex flex-col justify-center gap-5 self-stretch">
					<twig:TextField label="Adresse mail" type="email" name="email" autocomplete="email"/>

					<twig:TextField label="Mot de passe" type="password" name="password" autocomplete="new-password"/>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
				</div>

				<div
					class="flex flex-col md:flex-row-reverse items-center md:flex-1 gap-2.5 self-stretch">
					<!--Submit button-->
          <twig:Button value="S'inscrire" stretch />

          <!--Go back button-->
          <a class="flex-1 self-stretch rounded-[5px] bg-wq-blue-300 px-[10px] py-[10px] text-lg font-semibold text-white shadow hover:bg-wq-blue-400 text-center" href="{{ path('app_register') }}">
            Retour
          </a>
				</div>
			</form>
    </main>
  </div>
{% endblock %}
